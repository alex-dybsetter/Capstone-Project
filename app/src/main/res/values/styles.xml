<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginBtn">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="Headline">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">@dimen/headline_size</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:fontFeatureSettings">smcp</item>
    </style>

    <style name="Title" parent="Headline">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="FormLbl">
        <item name="android:textColor">@color/accent_dark</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="HelperText">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="InvalidText">
        <item name="android:textColor">@color/validation_error</item>
    </style>

    <style name="ProfileNameDisplay">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">@dimen/name_display_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:fontFeatureSettings">smcp</item>
    </style>

    <style name="StatsSubtitle">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:alpha">.5</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="EditBtn">
        <item name="android:tint">@color/primary_light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">@dimen/edit_btn_size</item>
        <item name="android:layout_height">@dimen/edit_btn_size</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="ProfileSubtitle">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>

    <style name="UploadImageText">
        <item name="android:layout_marginTop">@dimen/zero</item>
        <item name="android:background">@color/dark_text</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:alpha">.8</item>
    </style>

    <style name="CardBtn">
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:paddingStart">@dimen/standard_margin</item>
        <item name="android:paddingLeft">@dimen/standard_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">@dimen/card_padding_vertical</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
    </style>

</resources>
